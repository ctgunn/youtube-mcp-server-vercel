{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": { "nodeVersion": "22.x" }
    }
  ],
  "routes": [
    {
      "src": "/api/mcp",
      "dest": "api/index.ts"
    },
    {
      "src": "/api/health",
      "dest": "api/index.ts"
    },
    {
      "src": "/",
      "dest": "api/index.ts"
    }
  ]
}