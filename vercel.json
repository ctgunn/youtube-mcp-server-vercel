{
  "version": 2,
  "outputDirectory": "dist",
  "env": {
    "YOUTUBE_API_KEY": "@youtube_api_key"
  },
  "functions": {
    "dist/api/**/*.js": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/api/$1.js"
    }
  ]
}